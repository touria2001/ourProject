<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <ImageView
        android:id="@+id/img_view_logo"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:src="@drawable/attae"
        android:layout_marginStart="55dp"
        />


    <RelativeLayout
        android:id="@+id/deltaRelative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_view_logo"
        >
        <TextView
            android:id="@+id/slogin_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:text="Choose The Category Please"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="@color/green3"
            />
        <LinearLayout
            android:id="@+id/Linear1_Category_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slogin_category"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="0dp"
            >
            <ImageView
                android:id="@+id/t_shirts"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/tshirts"/>

            <ImageView
                android:id="@+id/sports_t_shirts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sports"/>
            <ImageView
                android:id="@+id/female_dresses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/female_dresses"/>
            <ImageView
                android:id="@+id/sweathers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sweather"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear2_Category_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Linear1_Category_Layout"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="12dp">
            <ImageView
                android:id="@+id/glasses"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/glasses"/>

            <ImageView
                android:id="@+id/purses_bags_wallets"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/purses_bags"/>
            <ImageView
                android:id="@+id/halts_caps"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hats"/>
            <ImageView
                android:id="@+id/shoess"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/shoess"
                android:layout_marginStart="16dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Linear3_Category_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Linear2_Category_Layout"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="12dp">
            <ImageView
                android:id="@+id/laptop_pc"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/laptops"/>

            <ImageView
                android:id="@+id/watches"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/watches"/>
            <ImageView
                android:id="@+id/headphones_handfree"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/headphoness"/>
            <ImageView
                android:id="@+id/mobilesphones"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/mobiles"
                android:layout_marginStart="16dp"
                />

        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deltaRelative1"
        android:layout_marginStart="200dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttons"
        android:fontFamily="sans-serif"
        android:text="Cancel"
        android:textColor="@color/likeWhite"
        android:textSize="@dimen/fab_margin"
        android:textStyle="bold|italic" />
</RelativeLayout>
