<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:layout_margin="10dp"/>


        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/deleteBtn"
            android:layout_marginTop="2dp"
            android:background="@drawable/inputs_design"
            android:innerRadius="10dp"
            android:scaleType="centerCrop"
            android:shape="ring" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:gravity="center"
            android:onClick="parler"
            android:text="send a message "
            android:visibility="visible"
            android:textAlignment="center"
            android:textColor="@color/likeWhite"
            android:background="@drawable/buttons"
            android:layout_marginStart="88dp"
            android:layout_marginEnd="88dp"

            android:textSize="18dp"

            />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:gravity="center"
            android:onClick="parler"
            android:text="num "
            android:visibility="invisible"
            android:textAlignment="center"
            android:textColor="@color/bleu"
            android:background="@drawable/buttons"
            android:layout_marginStart="88dp"
            android:layout_marginEnd="88dp"
            android:textSize="18dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l2"
            android:layout_below="@+id/product_price"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_location_on_24"
                android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="Product Description"
            android:textAlignment="center"
            android:textColor="@color/bleu2"
            android:textSize="20dp"
            android:textStyle="italic" />
        </LinearLayout>

        <Button
            android:id="@+id/reserver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l2"
            android:layout_centerInParent="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/buttons"
            android:onClick="reserver"
            android:text="Reserve"
            android:textAlignment="center"
            android:textColor="@color/likeWhite"
            android:textSize="16dp"
            android:textStyle="italic|bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>