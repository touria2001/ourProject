<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddNewProductActivity"
    android:background="@drawable/welcome"
    >

 <ImageView
     android:id="@+id/img_view_logo"
     android:layout_width="250dp"
     android:layout_height="150dp"
     android:src="@drawable/attae"
     android:layout_marginStart="50dp"
     />

 <ImageView
     android:id="@+id/select_product_image"
     android:layout_width="300dp"
     android:layout_height="100dp"
     android:layout_below="@+id/img_view_logo"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="10dp"
     android:cropToPadding="false"
     android:scaleType="centerCrop"
     android:src="@drawable/camera" />


 <EditText
     android:id="@+id/product_name"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/select_product_image"
     android:layout_marginLeft="35dp"
     android:layout_marginTop="45dp"
     android:layout_marginRight="45dp"
     android:background="@drawable/inputs_design"
     android:hint="Product Name..."
     android:inputType="textMultiLine"
     android:padding="20dp"
     android:paddingStart="15dp"
     android:textColor="@color/likeWhite"
     android:textColorHint="@color/likeWhite"
     android:textStyle="bold|italic" />


 <EditText
     android:id="@+id/product_description"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/product_name"
     android:inputType="textMultiLine"
     android:layout_marginTop="6dp"
     android:paddingBottom="100dp"
     android:hint="Product Description..."
     android:layout_marginLeft="35dp"
     android:layout_marginRight="45dp"
     android:background="@drawable/inputs_design"
     android:textColor="@color/likeWhite"
     android:textColorHint="@color/likeWhite"
     android:textStyle="bold|italic"
     android:paddingStart="15dp"
     />
 <!--<EditText
     android:id="@+id/product_price"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/product_description"
     android:inputType="textMultiLine"
     android:layout_marginTop="6dp"
     android:padding="20dp"
     android:hint="Product Price..."
     android:layout_marginLeft="45dp"
     android:layout_marginRight="45dp"
     android:background="@drawable/inputs_design"
     />-->


 <Button
     android:id="@+id/add_new_product"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/product_description"
     android:layout_marginLeft="45dp"
     android:layout_marginTop="20dp"
     android:layout_marginRight="45dp"
     android:background="@drawable/buttons"
     android:padding="17dp"
     android:text="Add"
     android:textAllCaps="false"
     android:textColor="@android:color/white"
     android:textSize="18sp" />
</RelativeLayout>
