<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    tools:context=".AnimationLoginActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:id="@+id/img_view_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/attae"
            />

        <TextView
            android:id="@+id/txt_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_view_logo"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="@color/likeWhite"
            android:textSize="30dp"
            android:textStyle="bold|italic"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:layout_marginTop="200dp"
            />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_view"
            android:layout_marginTop="100dp"
            android:background="@drawable/buttons"
            android:fontFamily="sans-serif"
            android:text="Contunue \>>"
            android:textColor="@color/likeWhite"
            android:textSize="@dimen/fab_margin"
            android:textStyle="bold|italic" />
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_continue"
            android:layout_marginTop="10dp"
            android:text="Exit"
            android:textColor="@color/likeWhite"
            android:background="@drawable/buttons"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/fab_margin"
            android:textStyle="bold|italic"

            />

    </RelativeLayout>



</RelativeLayout>